// colors
$green = #4CAF50
$gray =  #C7C7C7
$black = #8D8D8D
$white = #fff

$color1 = #5b677a
$color2 = #0600ff

.log-slider{
  display: block;
  padding-top: 13px;
  width:100%;
  .sel-bub{
    color: $color1;
    text-align: center;
    font-size: 15px;
    font-family: sans-serif;
  }
  .bub-holder{
    overflow: hidden;
    div{
      color: $color1;
      font-size: 15px;
      font-family: sans-serif;
    }
    .flr-bub{
      float: left;
    }
    .ceil-bub{
      float: right;
    }
  }
  .full-bar{
    position: absolute;
    top: 7px;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    height: 4px;
    background: $black;
    .sel-bar{
      position: absolute;
      height: 100%;
      background: $green
    }
  }
  .point-holder{
    position: relative;
    margin-right: 10px;
    div{
      position: absolute;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background-color: $color2;
      cursor: pointer;
      &:after{
        position: absolute;
        display: block;
        text-indent: 4px;
        letter-spacing: -2.5px;
        font-size: 11px;
        line-height: 20px;
        top: 5px;
        left: 5px;
        width: 6px;
        height: 6px;
      }
      &:hover{
        background-color: $color2;
      }
      &.active{
        background-color: $color2;
        &:after{
          color: $white;
        }
      }
    }
  }
  .bar-holder{
    position: relative;
    width:100%;
    &:before{
      position: absolute;
      left: 50%;
      display: block;
      width: 1px;
      height: 100%;
      background-color: $black;
      content: "";
    }
  }
}